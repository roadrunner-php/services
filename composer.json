{
    "name": "spiral/roadrunner-services",
    "type": "library",
    "description": "RoadRunner services manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Pavel Buchnev (butschster)",
            "email": "pavel.buchnev@spiralscout.com"
        },
        {
            "name": "RoadRunner Community",
            "homepage": "https://github.com/spiral/roadrunner/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "spiral/roadrunner": "^2.0",
        "spiral/goridge": "^3.1",
        "google/protobuf": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\RoadRunner\\Services\\": [
                "src",
                "generated/Spiral/RoadRunner/Services"
            ],
            "GPBMetadata\\": "generated/GPBMetadata"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "vimeo/psalm": ">=4.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\RoadRunner\\Services\\Tests\\": "tests"
        }
    },
    "scripts": {
        "build": [
            "protoc --proto_path=resources/proto --php_out=generated resources/proto/v1/message.proto resources/proto/shared/status.proto"
        ],
        "tests": "phpunit",
        "analyze": [
            "psalm --no-cache",
            "spiral-cs check src tests"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "suggest": {
        "ext-igbinary": "(>3.1.6) Igbinary serailizer support",
        "ext-sodium": "Sodium serailizer support"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
